# MCP-FRED Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# REQUIRED Configuration
# ===========================

# FRED API Key (required)
# Get your free API key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_api_key_here

# ===========================
# Storage Configuration
# ===========================

# Storage directory for FRED data files (optional, defaults to ./fred-data)
# Can be any local filesystem path
# Example: /Users/username/Documents/fred-data
FRED_STORAGE_DIR=./fred-data

# Default project name (optional, defaults to "default")
# Used when no project is specified in tool calls
FRED_PROJECT_NAME=default

# ===========================
# Output Configuration
# ===========================

# Default output format (optional, defaults to csv)
# Options: csv, json
FRED_OUTPUT_FORMAT=csv

# Default output mode (optional, defaults to auto)
# Options: auto, screen, file
# - auto: Automatically decide based on token estimation
# - screen: Always return data in response
# - file: Always save to file and return file path
FRED_OUTPUT_MODE=auto

# ===========================
# Token Estimation Configuration
# ===========================

# Safe token limit for responses (optional)
# Defaults: Claude Sonnet: 50000, GPT-4: 25000, Gemini Pro: 250000
# Override with specific value if needed
# FRED_SAFE_TOKEN_LIMIT=50000

# Percentage of context assumed already used (optional, defaults to 0.75)
# Accounts for chat history, system prompts, and other MCP servers
# FRED_ASSUME_CONTEXT_USED=0.75

# ===========================
# Async Job Configuration
# ===========================

# Job retention period in hours (optional, defaults to 24)
# How long to keep completed/failed job information
FRED_JOB_RETENTION_HOURS=24

# Job threshold - minimum rows for async processing (optional, defaults to 10000)
# Datasets larger than this will be processed in background
FRED_JOB_MIN_ROWS=10000

# ===========================
# Rate Limiting Configuration
# ===========================

# FRED API rate limit (requests per minute, optional, defaults to 120)
# FRED allows 120 requests per minute
FRED_RATE_LIMIT_PER_MINUTE=120

# Rate limit retry delay in seconds (optional, defaults to 60)
# How long to wait when rate limit is exceeded
FRED_RATE_LIMIT_RETRY_DELAY=60

# ===========================
# Development Configuration
# ===========================

# Log level (optional, defaults to INFO)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable debug mode (optional, defaults to false)
# Shows detailed error messages and stack traces
# DEBUG=false

# ===========================
# Production Configuration (Optional)
# ===========================

# Redis connection for distributed job storage (optional)
# If not set, uses in-memory storage (simple, sufficient for most use cases)
# REDIS_URL=redis://localhost:6379/0

# HTTP transport host (optional, defaults to localhost)
# For remote access, set to 0.0.0.0
# HTTP_HOST=localhost

# HTTP transport port (optional, defaults to 8000)
# HTTP_PORT=8000
